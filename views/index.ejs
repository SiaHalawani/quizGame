<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Index page</title>
    </head>
    <body>
        <h1>List of users</h1>
        <ul>
            <p style="color: red"><b>The number of users is:</b> <span style="color: #0000FF"><i><%= users.length%></i></span></p>
        </ul>
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Phone number</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>PASS</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=>{ %>
                    <tr>
                        <td>
                            <%= user.user_id %>
                        </td>
                        <td>
                            <%= user.user_name %>
                        </td>
                        <td>
                            <%= user.user_phone_number %>
                        </td>
                        <td>
                            <%= user.user_email %>
                        </td>
                        <td>
                            <%= user.user_dob %>
                        </td>
                        <td>
                            <%= user.user_password %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>